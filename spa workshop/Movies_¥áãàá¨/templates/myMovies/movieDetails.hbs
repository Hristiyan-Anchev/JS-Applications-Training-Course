{{> header}}

<div id="detailsMovie">
    <h1>Details</h1>
    <div class="movie">
        <h2>{{title}}</h2>
        <img src="{{movieCover}}">
        <p>{{description}}</p>
        <h2>Genres</h2>
        <ul class="genres">
            <li>{{genre}}</li>
        </ul>
        <p>Available Tickets: {{availableTickets}}</p>
        <button><a href="#/buyTicket/:{{objectId}}">Buy Ticket</a></button>
    </div>
</div>

{{> footer}}