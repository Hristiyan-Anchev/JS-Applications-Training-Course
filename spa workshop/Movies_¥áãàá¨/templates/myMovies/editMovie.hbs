{{>header}}
<div id="editMovie">
    <h1>Edit movie</h1>
    <form action="#/edit/:{{objectId}}" method="POST">
        <label>Title</label>
        <input type="text" name="title" value="{{title}}" id="editTitle">
        <label>Image Url</label>
        <input type="text" name="imageUrl" id="editImage"
               value="{{movieCover}}">
        <label>Description</label>
        <textarea type="text" id="editDescription"
                  name="description">{{description}}</textarea>
        <label>Genres</label>
        <input type="text" name="genres" value="{{genre}}" id="editGenres">
        <label>Available Tickets</label>
        <input type="number" name="tickets" value="{{availableTickets}}" id="editTickets">
        <input type="submit" value="Edit">
    </form>
</div>
{{> footer}}