{{>header}}

<div class="container home some">
    <img class="det-img" src="{{imageURL}}" />
    <div class="desc">
        <h2 class="display-5">{{title}}</h2>
        <p class="infoType">Description:</p>
        <p class="idea-description">{{description}}</p>
        <p class="infoType">Likes: <large>{{likes}}</large>
        </p>
        <p class="infoType">Comments:</p>
        <ul>
            {{#if commentsCount}}
                {{#each comments}}
                    <li class="comment">{{this}}</li>
                {{/each}}
            {{else}}
                <li class="comment">No comments yet :(</li>
            {{/if}}
        </ul>
    </div>
    {{#if isCreator}}
        <div class="text-center">
            <a class="btn detb" href="#/delete/{{objectId}}">Delete</a>
        </div>
    {{/if}}

    <form class="text-center" method="post" action="#/comment-idea/{{objectId}}">
        <textarea class="textarea-det" name="newComment" id=""></textarea>
        <button type="submit" class="btn detb" >Comment</button>
        <a class="btn detb" href="#/like-idea/{{objectId}}">Like</a>
    </form>
</div>

{{>footer}}